{
  // You can specify your own include/exclude
  "include": [".", "../ui/types/index.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node"
  }
}
