{
  // You can specify your own include/exclude
  "include": ["."],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node"
  }
}
